<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <com.gu.baselibrary.view.ForbidViewPager
        android:id="@+id/home_activity_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/home_activity_common_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        tl:tl_iconHeight="24dp"
        tl:tl_iconWidth="24dp"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="@color/secondary_text_color"
        tl:tl_textsize="@dimen/text_font_size_small_12sp"
        tl:tl_underline_color="@color/white"
        tl:tl_underline_height="1dp" />
</LinearLayout>