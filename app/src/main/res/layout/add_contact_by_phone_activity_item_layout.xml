<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contacts_item_index_tv"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/divider_color_low"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/text_font_size_content_14sp" />

    <LinearLayout
        android:id="@+id/contacts_item_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contacts_item_head_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/default_head_img" />

        <TextView
            android:id="@+id/contacts_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_margin_normal_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_font_size_title_18sp" />

        <Button
            android:id="@+id/add_contact_by_phone_activity_item_add_btn"
            android:singleLine="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="添加"
            android:textSize="@dimen/text_font_size_small_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:background="@color/divider_color" />

</LinearLayout>